table {
    margin:1em auto;
}
td {
    padding:4px;
    height:30px;
    width:30px;
    border:1px solid;
    text-align:center;
}
td:first-child {
    border-left:solid;
}
td:nth-child(3n) {
    border-right:solid ;
}
tr:first-child {
    border-top:solid;
}
tr:nth-child(3n) td {
    border-bottom:solid ;
}

